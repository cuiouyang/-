<script type="text/javascript">
 function btnAction(){
	//debugger;
	if($('#dateTime').text() == ""){
		alert('日期不能为空');
		return;
	}
	var dateTime = $("#dateTime").text();
	var opt = document.getElementById("sec").value
	window.location.href="${pageContext.request.contextPath}/partakeitems/queryByDate?dateTime=" + dateTime + "&opt=" + opt;	
 } 

 function btnActions(){
	//debugger;
	var keyword = document.getElementById("kw").value;
	if(keyword ==""){
		alert('关键字不能为空');
	}
	var opt = document.getElementById("sect").value;
	window.location.href="${pageContext.request.contextPath}/partakeitems/queryByItem?keyword=" + keyword + "&opt=" + opt;
	}  
 
