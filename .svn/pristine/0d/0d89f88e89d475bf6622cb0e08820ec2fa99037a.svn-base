<script type="text/javascript">
function validate(){
	
    var a="请选择时间";
	 if($('projectName').val()==""){
		 alert("项目名称不能为空");
		 return false;
	 }
	 if($('#contractNo').val()==""){
		 alert("合同编号不能为空");
		 return false;
	 }
	 if($('#pmName').val()==""){
		 alert("项目经理不能为空");
		 return false;
	 }
	 if(a==$('#dateTime').text()){
		 alert("计划时间段不能为空");
		 return false;
	 }else{
		 return true;
	 }

}
function save(){
	getTime();
	if(!validate()){
		return ;	
	}
	
	$.ajax({
				url: '${pageContext.request.contextPath}/items/saveValidate',
				type:'post',
				data: ({
					projectName:$('#projectName').val(),
					contractNo:$('#contractNo').val()
					
				}),
				success:function(data){
                    if(data=='01'){
						
						alert("保存失败！ 警告：项目名称不允许重复");
					}else if(data=='02'){
						
						alert("保存失败！ 警告：合同编号不允许重复");
					}
                    
                    $('#saveItemsForm').submit();
                    
				},
				error:function(){
					
					alert("登录超时，请刷新并重新登录后进行此操作");
				}
	});
	
}

function getTime(){
	var dateTime=$('#dateTime').text();
	var time="<input type='hidden' class='dateTime' name='dateTime'  value='"+dateTime+"'></input>";
	$('#dateTime').append(time); 
}

</script>
