function save(){
	
	if($("#itemTopic").val() == ""){
		layer.tips('工作项的标题不能为空！', '#itemTopic', {
			  tips: [1, '#3595CC'],
			  time: 4000
		});
		return;
	}
	if($("#projectId").val() == "" || $("#projectId").val() == "请选择"){
		layer.tips('参与项目名称不能为空！', '#projectId', {
			  tips: [1, '#3595CC'],
			  time: 4000
		});
		return;
	}
	
	if($("#planTime").text() == ""){
		layer.tips('计划工作日期不能为空！', '#planTime', {
			  tips: [1, '#3595CC'],
			  time: 4000
		});
		return;
	}
	
	if($("#actTime").text() == ""){
		layer.tips('实际工作日期不能为空！', '#actTime', {
			  tips: [1, '#3595CC'],
			  time: 4000
		});
		return;
	}
	
	var date = $("#actTime").text().substring(13);
	var arr1 = date.split("-");   
	var endDateTime = new Date(arr1[0],parseInt(arr1[1])-1,arr1[2]).getTime(); 
	var todayTime = new Date().getTime();
	
	if(endDateTime > todayTime){
		layer.tips('实际工作结束日期不能超过今天！', '#actTime', {
			  tips: [1, '#3595CC'],
			  time: 4000
		});
		return;
	}
	
	//var reg = /^[0-3][0-9]|40$/;
	//var reg = /^([0-3]?)([0-9]{1})((.[0-9]){1})|40|40.0$/;
	var planHour = $("#planHour").val();
	if(planHour == ""){
		layer.tips('计划工作时长不能为空！', '#planHour', {
			  tips: [1, '#3595CC'],
			  time: 4000
		});
		return;
	}
	if(!isNaN(planHour)){
		 if(parseFloat(planHour)<=0 || parseFloat(planHour)>40.0){
			layer.tips('计划工作时长应在0到40小时！', '#planHour', {
				  tips: [1, '#3595CC'],
				  time: 4000
			});
			return;
		 }
	}else{
		layer.tips('请输入合法计划工作时长！', '#planHour', {
			  tips: [1, '#3595CC'],
			  time: 4000
		});
		return;
	}

	var actHour = $("#actHour").val();
	if(actHour == ""){
		layer.tips('实际工作时长不能为空！', '#actHour', {
			  tips: [1, '#3595CC'],
			  time: 4000
		});
		return;
	}
	if(!isNaN(actHour)){
		 if(parseFloat(actHour)<=0 || parseFloat(actHour)>40.0){
			layer.tips('实际工作时长应在0到40小时！', '#actHour', {
				  tips: [1, '#3595CC'],
				  time: 4000
			});
			return;
		 }
	}else{
		layer.tips('请输入合法实际工作时长！', '#actHour', {
			  tips: [1, '#3595CC'],
			  time: 4000
		});
		return;
	}
	
	if($("#itemContent").val() == ""){
		layer.tips('工作内容描述不能为空！', '#itemContent', {
			  tips: [1, '#3595CC'],
			  time: 4000
		});
		return;
	}
	
	if($("#sponsorId").val() == "" || $("#sponsorId").val() == "请选择"){
		layer.tips('工作项发起人不能为空！', '#sponsorId', {
			  tips: [1, '#3595CC'],
			  time: 4000
		});
		return;
	}
	
	if($("#auditorId").val() == "" || $("#auditorId").val() == "请选择"){
		layer.tips('工作项评价人不能为空！', '#auditorId', {
			  tips: [1, '#3595CC'],
			  time: 4000
		});
		return;
	}
	
	var milestone1 = $("#milestone1").val();
	var milestone2 = $("#milestone2").val();
	var milestone3 = $("#milestone3").val();
	var milestone4 = $("#milestone4").val();
	if(milestone1 == "" || milestone1 == "请选择"){
		layer.tips('项目里程碑第一级不能为空！', '#milestone1', {
			  tips: [1, '#3595CC'],
			  time: 4000
		});
		return;
	}
	
	//判断里程碑二三四级是否存在 若存在则判断是否已选择
	if(document.getElementById("milestone2").options.length > 1){
		if(milestone2 == "" || milestone2 == "请选择"){
			layer.tips('项目里程碑第二级不能为空！', '#milestone2', {
				  tips: [1, '#3595CC'],
				  time: 4000
			});
			return;
		}else{
			if(document.getElementById("milestone3").options.length > 1){
				if(milestone3 == "" || milestone3 == "请选择"){
					layer.tips('项目里程碑第三级不能为空！', '#milestone3', {
						  tips: [1, '#3595CC'],
						  time: 4000
					});
					return;
				}else{
					if(document.getElementById("milestone4").options.length > 1){
						if(milestone4 == "" || milestone4 == "请选择"){
							layer.tips('项目里程碑第四级不能为空！', '#milestone4', {
								  tips: [1, '#3595CC'],
								  time: 4000
							});
							return;
						}
					}
				}
			}
		}
	}
	
	submitWorkItem();
	
}

var arr = new Array();
var param = new Array();
var  flag=true;
function submitWorkItem(){
	if(flag ==true){
		flag=false;
	    var planTime = $("#planTime").text();
		var actTime = $("#actTime").text();
		$('#workItemForm').ajaxSubmit({
			data:{'param':param},
			type:"POST",
			url:"${pageContext.request.contextPath}/workItem/saveWorkItem?planTime=" + planTime + "&actTime=" + actTime,
	 		success:function(data){
				flag=true;
			 	if(data){
			 		layer.msg('保存成功！', {icon: 1});
			 		window.location.href="${pageContext.request.contextPath}/workItem/index";
			    }else{
			    	layer.confirm('保存失败！', {
						  btn: ['确定'] //按钮
						}, function(){
							window.location.href="${pageContext.request.contextPath}/workItem/index";
						}); 
			 	}
	 		},
			error:function(){
				flag=true;
				layer.confirm('登录超时，请刷新并重新登录后进行此操作！', {
					  btn: ['去登录'] //按钮
					}, function(){
						window.location.href="${pageContext.request.contextPath}";
					}); 
			}
		});
	}
}

</script>
 <script type="text/javascript">
		jQuery(document).ready(function($){
			var i = 1,
				$example_dropzone_filetable = $("#example-dropzone-filetable"),
				example_dropzone = $("#advancedDropzone").dropzone({
				url: '${pageContext.request.contextPath}/workItem/uploadDeliverable',
			    paramName: "file",
			    method: 'post',
				// Events
				addedfile: function(file){
					if(i == 1)
					{
						$example_dropzone_filetable.find('tbody').html('');
					}
					
					var size = parseInt(file.size/1024, 10);
					size = size < 1024 ? (size + " KB") : (parseInt(size/1024, 10) + " MB");
					var fileName = file.name;
					var fileLength = file.name.length;
					var name = fileLength > 4 ? fileName.substring(0,4)+'..' : fileName;
					var	$el = $('<tr>\
									<td class="text-center">'+(i++)+'</td>\
									<td style = "font-size:12px;" title = '+fileName+'>'+name+'</td>\
									<td><div class="progress progress-striped"><div class="progress-bar progress-bar-warning"></div></div></td>\
									<td>'+size+'</td>\
									<td>Uploading...</td>\
								</tr>');
					
					$example_dropzone_filetable.find('tbody').append($el);
					file.fileEntryTd = $el;
					file.progressBar = $el.find('.progress-bar');
				},
				
				uploadprogress: function(file, progress, bytesSent){
					file.progressBar.width(progress + '%');
				},
				
				success: function(file){
					file.fileEntryTd.find('td:last').html('<span class="text-success">上传成功</span>');
					file.progressBar.removeClass('progress-bar-warning').addClass('progress-bar-success');
				},
				
				error: function(file){
					file.fileEntryTd.find('td:last').html('<span class="text-danger">上传失败</span>');
					file.progressBar.removeClass('progress-bar-warning').addClass('progress-bar-red');
				}
			});
			
			$("#advancedDropzone").css({
				minHeight: 200
			});

		});
	</script> 
	
</html>