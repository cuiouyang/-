 function showAjaxModal(id)
	{
	 
		jQuery('#modal-7').modal('show', {backdrop: 'static'});
		var projectId=id;
		jQuery.ajax({
			url: '${pageContext.request.contextPath}/partakeitems/details',
			type: 'post',
			data: ({
				projectId:projectId
				
			}),
			success: function(response)
			{
				
				
				jQuery('#modal-7 .modal-body').html(response);
			}
		});
